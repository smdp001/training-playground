pipeline {
    agent {
		dockerfile {
			dir '003 - Defining Execution Environments'
			filename '03 - Dockerfile - Install Software Dockerfile'
			additionalBuildArgs ''
			args ''
        }
    }
    stages {
        stage('build') {
            steps {
            	echo "Don't install curl here!"
                sh "curl www.google.com"
            }
        }
    }
}
