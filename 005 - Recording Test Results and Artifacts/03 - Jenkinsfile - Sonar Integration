pipeline {
    agent { 
		docker { 
			image 'maven:3.5.2' 
		}
	}
    stages {
        stage('build') {
            steps {
				script {
					sh 'mvn -f "005 - Recording Test Results and Artifacts/03 - Sonar Integration/" compile'
					sh 'mvn clean verify sonar:sonar \		
							-Dsonar.host.url=http://3.124.164.63:8081/
				}
            }
        }
    }
}
