pipeline {
    agent { 
		docker { 
			image 'alpine/curl:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
                sh "curl www.google.com > file.html"
            }
        }
    }
	post {
		always {
			archiveArtifacts artifacts: '005 - Recording Test Results and Artifacts'
		}
	}
}
