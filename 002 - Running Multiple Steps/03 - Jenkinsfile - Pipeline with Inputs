pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
			input {
				message: "What is your name?"
					parameters {
						string(name: 'NAME', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')	
						string(name: 'AGE', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')
					}
				
			}
	 }
         steps {
                sh 'echo "$NAME"'
                sh 'echo "$AGE"'
         }
    }
}
