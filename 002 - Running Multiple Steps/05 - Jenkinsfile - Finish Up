pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
                sh "exit \$((RANDOM % 2))"
            }
        }
    }
    post {
    	success {
		sh 'echo Success!'
	}
	failure {
		sh 'echo Fail!'
	}
	always {
		sh 'echo Always!'
	}
    }
}
