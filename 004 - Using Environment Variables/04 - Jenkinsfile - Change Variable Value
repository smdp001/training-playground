pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
	
	environment {
		NUMBER_OF_ISSUES = 0
	}
	
    stages {
        stage('Test') {
                NUMBER_OF_ISSUES = 10
        }
		stage('Notification') {
                sh "echo '$NUMBER_OF_ISSUES' issues"
        }
    }
}
