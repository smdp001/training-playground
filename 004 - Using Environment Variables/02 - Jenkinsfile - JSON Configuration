pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
	environment {
		BUILD_CONFIGS = ''' [{name: "teste", command: "echo teste command"}, 
							 {name: "teste 1", command: "echo teste 1 command"}]
				'''	 
	}
    stages {
        stage('build') {
            steps {
                script {
                	def buildConfigs = [{name: "teste", command: "echo teste command"}, 
					    {name: "teste 1", command: "echo teste 1 command"}]
                	buildConfigs.each{ buildConfig ->
                		sh "echo '$buildConfig.name' && $buildConfig.command"
					}
                }
            }
        }
    }
}
