pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
                script {
                	def buildConfigs =  readJSON text: '''[{name: "teste", command: "echo 'teste command'"}, 
					    {name: "teste 1", command: "echo 'teste 1 command'"}]'''

                	buildConfigs.each{ buildConfig ->
                		sh "echo '$buildConfig.name' && $buildConfig.command"
					}
                }
            }
        }
    }
}
