pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
		script {
			def buildConfigs =  readJSON text: '''[{name: "teste", command: "teste command"}, 
													{name: "teste 2", command: "teste 2 command"}]'''
						
			buildConfigs.each{ buildConfig ->
						stage('build') {
							steps {
									sh "echo '$buildConfig.name' && $buildConfig.command"			
							}
						}
			}		
		}
	}
}
