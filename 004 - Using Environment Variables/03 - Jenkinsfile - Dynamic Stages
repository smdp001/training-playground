pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
		stage('build') {
			def buildConfigs =  readJSON text: '''[{name: "PLSQL", command: "PLSQL command"}, 
													{name: "PYTHON", command: "PYTHON command"}]'''
						
			buildConfigs.each{ buildConfig ->
				stage($buildConfig.name){
					steps {
						sh "echo '$buildConfig.name' && $buildConfig.command"			
					}
					
				}
			}
		}
	}
}
